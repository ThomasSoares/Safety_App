<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomas.safepanic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OpeningActivity"
            android:theme="@style/NoAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoAppTheme" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/NoAppTheme" />
        <activity
            android:name=".Signup1Activity"
            android:theme="@style/NoAppTheme" />
        <activity
            android:name=".Signup2Activity"
            android:theme="@style/NoAppTheme" />
        <activity android:name=".HomeActivity" android:theme="@style/NoAppTheme"></activity>
    </application>

</manifest>